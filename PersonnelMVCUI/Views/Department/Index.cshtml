@using PersonnelMVCUI.Models.EntityFramework
@model  List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <a class="btn btn-success" style="margin-top:15px;margin-bottom:15px" href="/Department/Add/">New Department</a>
<h2>Department List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td><a class="btn btn-primary"  href="/Department/Update/@department.Id">Update</a></td>
                <td><a class="btn btn-warning"  href="/Department/Delete/@department.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
