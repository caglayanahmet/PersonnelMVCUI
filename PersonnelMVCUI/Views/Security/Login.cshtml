@model PersonnelMVCUI.Models.EntityFramework.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <h2 style="text-align:center">Login Page</h2>
    <div style="text-align:center;color:red">@ViewBag.Message </div>
    @using (Html.BeginForm("Login", "Security", FormMethod.Post))
    {
        <div class="container">
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-block btn-danger btn-lg">Login</button>
        </div>
    }
</body>
</html>
